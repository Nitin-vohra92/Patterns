/*


Print the following pattern for N

Here, N=4
    *
   *** 
  *****
 *******
 
 
 */

#include<iostream>
using namespace std;

int main()
{
 int n,i=1;
 cin>>n;




// while loop for row wise 




 while(i<=n)
    {
    // while loops for colomn wise transversals
        int count=1;
      // printing spaces
        while(count<=n-i)
         {
            cout<<" ";
            count=count+1;
         }
         count=1;
      // printing stars
         while(count<=2*i-1)
         {
             cout<<"*";
             count=count+1;
         }
         
    i=i+1;
    cout<<endl;
    }
}


